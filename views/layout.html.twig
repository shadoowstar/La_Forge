<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{{ pageTitle}}</title>
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/overlay.css') }}">
        <link rel="stylesheet" href="{{ asset('css/fullcalendar.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/fullcalendar.print.min.css') }}" media='print'>
        <link rel="stylesheet" href="{{ asset('css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/typenohead.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Indie+Flower|Pacifico|Poiret+One|Annie+Use+Your+Telescope|Roboto" rel="stylesheet">

    </head>
    <body>
        <!-----------HEADER---------->
        <header>
            <div class="Menu">
                <nav id="nav" class="navbar navbar-expand-lg navbar-light bg-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                        <a class="navbar-brand" href="{{path('home')}}"> <strong>La Forge</strong></a>
                        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('home')}}">Accueil <span class="sr-only">(current)</span></a>
                            </li>

                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('contact')}}">Contact <span class="sr-only">(current)</span></a>
                            </li>


                    {% if global.session.get('user')['id'] is not defined %}

                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('register')}}">Inscription <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('connection')}}">Connexion <span class="sr-only">(current)</span></a>
                            </li>

                    {% else %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('member-area')}}">Espace membre<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('deconnection')}}">Deconnection <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('event')}}">Calendrier <span class="sr-only">(current)</span></a>
                            </li>

                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('calendarAdmin')}}">Ajout d'evenement<span class="sr-only">(current)</span></a>
                            </li>

                    {% endif %}
                        </ul>

                        <form class="search-form form-inline my-2 my-lg-0">
                            <input data-ajax="{{ path('search') }}" class="form-control mr-sm-2 typeahead" type="text" placeholder="Rechercher">
                            <div id="search-suggestion"></div>
                        </form>

                    </div>
                </nav>
            </div>
        </header>

        {% block content %}

        {% endblock %}

        <!------------FOOTER---------->
        <footer>
            <div class="pied">
                <p>© 2018 La Forge By</p>
                <p>Pernette Jerrylee, Siméon Jérôme, Voynier Valentin et Marc-Antoine Dur</p>
            </div>
        </footer>
        <script>
            const pageUrl = "{{ path("home") }}";
            const assetUrl = "{{ asset('') }}";
        </script>
        <script type="text/javascript" src="{{ asset('script/jquery-3.3.1.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('script/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('script/moment.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('script/popper.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('script/fullcalendar.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('script/script.js') }}"></script>
        {% if global.request.get('_route') == 'register' %}<script type="text/javascript" src="{{ asset('script/registerSubmit.js') }}"></script>{% endif %}
        {% if global.request.get('_route') == 'connection' %}<script type="text/javascript" src="{{ asset('script/login.js') }}"></script>{% endif %}
        {% if global.request.get('_route') == 'event' %}<script type="text/javascript" src="{{ asset('script/calendar.js') }}"></script>{% endif %}
        {% if global.request.get('_route') == 'calendarAdmin' %}<script type="text/javascript" src="{{ asset('script/eventSubmit.js') }}"></script>{% endif %}

    </body>
</html>
