{% extends 'layout.html.twig'%}

{%set pageTitle = 'profil'%}

{% block content %}
    <h1>je suis la page de Profil !</h1>

    <table class="table">
        <tr>
            <td>Nom</td>
            <td>Prenom</td>
            <td>Adresse Email</td>
        </tr>

        {% for account in accounts %}
        <tr>
            <td>{{account['firstname']}}</td>
            <td>{{account['name']}}</td>
            <td>{{account['email']}}</td>
        </tr>
        {% endfor %}
    </table>
    <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nom</th>
      <th scope="col">Prenom</th>
      <th scope="col">Adresse</th>
    </tr>
  </thead>
  <tbody>
      {% for account in accounts %}
      <tr>
          <th scope="row">{{account['id']}}</th>
          <td>{{account['firstname']}}</td>
          <td>{{account['name']}}</td>
          <td>{{account['email']}}</td>
      </tr>
      {% endfor %}

  </tbody>
</table>

{% endblock %}
